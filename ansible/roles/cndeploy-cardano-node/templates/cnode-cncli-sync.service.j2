[Unit]
Description=Cardano Node - CNCLI Sync
BindsTo=cnode.service
After=cnode.service
[Service]
Type=simple
Restart=on-failure
RestartSec=20
User=ubuntu
WorkingDirectory=/opt/cardano/cnode/scripts
ExecStart=/bin/bash -l -c "exec /opt/cardano/cnode/scripts/cncli.sh sync"
ExecStop=/bin/bash -l -c "exec kill -2 $(ps -ef | grep [c]ncli.sync.*./opt/cardano/cnode/ | tr -s ' ' | cut -d ' ' -f2) &>/dev/null"
KillSignal=SIGINT
SuccessExitStatus=143
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=cnode-cncli-sync
TimeoutStopSec=5
KillMode=mixed
[Install]
WantedBy=cnode.service
